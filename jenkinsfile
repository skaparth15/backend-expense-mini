pipeline {
agent{
    label "agent"
}

stages{
    stage("installing dependinces"){
        steps{
            sh """
                npm install
                ls -ltr
            """
        }
    }
      stage("packaging the compiled code"){
        steps{
            sh """
                zip -r backend.zip . -x jenkinsfile

            """
            }

    }

    stage("uploading the package to nexus"){
        steps{
        
            nexusArtifactUploader(
                nexusVersion: 'nexus3',
                protocol: 'http',
                nexusUrl: '52.91.138.230:8081',
                groupId: 'com.expense',
                credentialsId: "nexus-cred",
                repository: 'backend-expense',
                artifacts: [
                    [artifactId: 'backend',
                        classifier: '',
                        file: 'backend',
                        type: 'zip']
                ]
                )
            }
    }
}

}